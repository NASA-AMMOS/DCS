<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">

  <Properties>
    <Property name="KmcClientDebugFilePath">${sys:user.home}/kmc-crypto-client-debug</Property>
  </Properties>

  <Appenders>
    <Console name="LogToConsole" target="SYSTEM_OUT">
      <PatternLayout pattern="%m%n"/>
    </Console>
    <RollingFile name="KmcClientDebugFileAppender" fileName="${KmcClientDebugFilePath}.log"
                 filePattern="${KmcClientDebugFilePath}-%d{yyMMdd}-%i.log.gz">
      <PatternLayout pattern="[%d{ISO8601}{UTC} UTC] [%t] %-5p %c - %m%n"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="100MB"/>
      </Policies>
      <DefaultRolloverStrategy max="30"/>
    </RollingFile>

    <Syslog name="KmcClientAuditSyslogAppender"
            includeMDC="true"
            host="localhost"
            port="514"
            protocol="UDP"
            facility="LOCAL4"
            format="RFC5424"
            appName="kmc-crypto-client-audit"
            messageId="AUDIT"
            enterpriseNumber="18060"
            newLine="true">
      <RFC5424Layout
        includeMDC="true"
        messageId="AUDIT"
        appName="kmc-crypto-client-audit"
        enterpriseNumber="18060"
        newLine="true"
      />
    </Syslog>
  </Appenders>

  <Loggers>
    <Logger name="gov.nasa.jpl.ammos.kmc" level="info" additivity="false">
      <AppenderRef ref="KmcClientDebugFileAppender"/>
    </Logger>
    <Logger name="ch.ntb.inf.kmip" level="info" additivity="false">
      <AppenderRef ref="KmcClientDebugFileAppender"/>
    </Logger>
    <Logger name="AUDIT" level="info" additivity="false">
      <AppenderRef ref="KmcClientAuditSyslogAppender"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="LogToConsole"/>
    </Root>
  </Loggers>

</Configuration>
